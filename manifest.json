{

  "description": "IDE Manipulator of CG",
  "manifest_version": 2,
  "name": "idem",
  "version": "0.1",
  //"homepage_url": "TODO",
  "icons": {
    "48": "icons/logo_squadracer_cg_twitch.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "https://www.codingame.com/"
  ],

  "background": {
    "scripts": ["background_scripts/idem_ws.js", "background_scripts/idem_bg.js"],
    "persistent": true // in order to keep background script running and so ws. see how to with manifest v3
  },

  "browser_action": {
    "default_icon": "icons/logo.png",

    "default_title": "idem",
    "default_popup": "popup/popup.html"
  }

}
